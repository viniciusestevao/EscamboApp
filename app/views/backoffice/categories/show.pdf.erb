
    <h1 class="page-header"><%= @categories.model_name.human(count: 2) %></h1>

    <div class="panel panel-default">
        <br>
        <div class="panel-heading">
            Categorias
            <%= link_to new_backoffice_category_path, class: "btn btn-success btn-circle float-right", style: "margin-top:-5px" do %>
                <i class="fa fa-link"></i>
            <% end %>

            <%= link_to '#', class: "btn btn-warning btn-circle float-right", style: "margin-top:-5px; margin-right: 5px;" do %>
                <i class="fa fa-plus"></i>
            <% end %>
        </div>
        <br>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th><%= @categories.model.human_attribute_name('description')%></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @categories.each do |category| %>
                        <tr>
                            <td><%= category.id %></td>
                            <td><%= category.description %></td>
                            <td style="width: 150px">
                                <%= link_to edit_backoffice_category_path(category), class: "btn btn-primary btn-circle" do %>    
                                     <i class="fa fa-edit"></i>
                                <% end %>
                                <button type="button" disabled="disabled" class="btn btn-danger btn-circle">
                                     <i class="fa fa-edit"></i>
                                </button>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>

