<div class="modal" id="sendMailModal" tabindex="-1" role="dialog" aria-labelledby="sendMailModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
          <h4 class="modal-title" id="sendMailModalLabel"><%= "Nova mensagem para #{@admin1}" %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
            <!-- form_with url: backoffice_send_mail_index_path, method: :create do |f| -->
            <%= form_tag(backoffice_send_mail_index_path) do %>
                <div class="form-group">
                    <%= label_tag 'Para:' %>
                    <%= text_field_tag(:'recipient-text', nil, class: "form-control", readonly: "readonly", placeholder: "Informe o e-mail destinatÃ¡rio") %>
                </div>
                <div class="form-group">
                    <%= label_tag 'Assunto:' %>
                    <%= text_field_tag(:'subject-text', nil, class: "form-control", placeholder: "Informe o assunto") %>
                </div>
                <div class="form-group">
                    <%= label_tag 'Mensagem:' %>
                    <%= text_field_tag(:'message-text', nil, class: "form-control", placeholder: "Escreva uma mensagem") %>
                </div>
                <br>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
            <% end %>
      </div>
      
    </div>
  </div>
</div>
