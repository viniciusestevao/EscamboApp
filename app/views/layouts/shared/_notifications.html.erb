<% if notice %>
    <!-- javascript_tag "$.notify('#{notice}', { className: 'success', globalPosition: 'top center'});" -->
    <%= javascript_tag "$.notify({message:'#{notice}'}, {type: 'success', placement: { from: 'top', align: 'center' }});" %>
<% end %>
<% if alert %>
    <%= javascript_tag "$.notify('#{notice}', { className: 'error', globalPosition: 'top center'});" %>
<% end %>