<div class="container">

    <div class="row" style="padding-left:15%;">
  
      <div class="col-lg-12">
  
        <h2 class="my-4">Anúncios</h2>
        <div class="list-group">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Imagem</th>
                        <th>Título</th>
                        <th>Categoria</th>
                        <th>Preço</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @ads.each do |ad| %>
                        <tr>
                            <th scope="row"><%= ad.id %></th>
                            <th><%= image_tag ad.picture(:thumb) %></th>
                            <th><%= ad.title %></th>
                            <th><%= ad.category.description %></th>
                            <th><%= humanized_money_with_symbol ad.price %></th>
                            <th>
                                <%= link_to edit_site_profile_ad_path(ad), class:"btn btn-primary btn-sm" do %>
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                <% end %>
                            </th>
                        </tr>
                    <% end %>
                </tbody>
            </table>          
        </div>
  
      </div>
  
      <div class="col-lg-12">
          <% 50.times do %><br><% end %>
      </div>
    </div>
  </div>